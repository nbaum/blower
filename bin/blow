#!/usr/bin/env ruby
require 'blower'
require 'pathname'
require 'optparse'

OptionParser.new do |opts|
  opts.banner = "Usage: blow [options] task..."
  opts.on "-d DIR", "Change directory" do |v|
    Dir.chdir v
  end
end.order!

context = Blower::HostGroup.from_inventory("hosts")
ARGV.each do |arg|
  context.run arg
end
